# Frontend API Configuration
VITE_API_URL=https://apexpay.duckdns.org/api

# Supabase Configuration (if needed)

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://apexpay.duckdns.org
APP_TIMEZONE=America/Sao_Paulo

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=payment_gateway
DB_USER=root
DB_PASS=YOUR_MYSQL_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=YOUR_SECURE_JWT_SECRET_KEY_HERE_CHANGE_THIS
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# Storage Configuration
STORAGE_PATH=../storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
LOG_PATH=../storage/logs

# PodPay Configuration (se usar)
PODPAY_PUBLIC_KEY=YOUR_PODPAY_PUBLIC_KEY_HERE
PODPAY_SECRET_KEY=YOUR_PODPAY_SECRET_KEY_HERE
PODPAY_ENVIRONMENT=sandbox
